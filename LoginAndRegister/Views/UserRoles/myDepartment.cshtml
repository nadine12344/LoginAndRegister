
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>My Department</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Email</th>
            <th>Roles</th>
        
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.Email</td>
            @foreach (var role in @user.Roles){
            <td>@role</td>}
          
        </tr>
        }
    </tbody>
</table>
